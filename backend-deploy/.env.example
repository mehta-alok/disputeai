# ============================================================================
# DisputeAI - Environment Configuration
# ============================================================================
# Copy this file to the appropriate environment file:
#   - .env.local       (local development)
#   - .env.development (dev server)
#   - .env.staging     (staging/QA)
#   - .env.production  (production)
# ============================================================================

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
APP_NAME=DisputeAI
APP_VERSION=1.0.0
DEPLOY_ENV=local

# =============================================================================
# SERVER
# =============================================================================
PORT=8000
HOST=0.0.0.0
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://disputeai_user:disputeai_password@localhost:5432/disputeai_chargeback?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_NAME=disputeai_db
DB_USER=disputeai
DB_PASSWORD=disputeai_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# REDIS (Caching & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Storage
AWS_S3_BUCKET=disputeai-chargeback-evidence
S3_BUCKET_REGION=us-east-1
AWS_S3_PRESIGNED_EXPIRY=3600

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Provider: openai, anthropic, ollama
AI_MODEL_PROVIDER=ollama
AI_MODEL_NAME=llama3
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI (if using openai provider)
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4-turbo
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4096
AI_AUTO_SUBMIT_THRESHOLD=85
AI_REVIEW_THRESHOLD=70

# Demo mode (auto-enabled when DB is unavailable)
DEMO_MODE=true

# =============================================================================
# PMS INTEGRATION
# =============================================================================
PMS_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Opera Cloud
OPERA_CLOUD_CLIENT_ID=
OPERA_CLOUD_CLIENT_SECRET=
OPERA_CLOUD_ENTERPRISE_ID=

# Mews
MEWS_CLIENT_TOKEN=
MEWS_ACCESS_TOKEN=

# Cloudbeds
CLOUDBEDS_CLIENT_ID=
CLOUDBEDS_CLIENT_SECRET=

# AutoClerk
AUTOCLERK_API_KEY=
AUTOCLERK_PROPERTY_ID=

# =============================================================================
# PAYMENT PROCESSOR WEBHOOKS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# Adyen
ADYEN_API_KEY=your-adyen-api-key
ADYEN_MERCHANT_ACCOUNT=DisputeAIHotels
ADYEN_HMAC_KEY=your-adyen-hmac-key

# Shift4
SHIFT4_SECRET_KEY=your-shift4-secret
SHIFT4_WEBHOOK_SECRET=your-shift4-webhook-secret

# Elavon
ELAVON_MERCHANT_ID=your-merchant-id
ELAVON_USER_ID=your-user-id
ELAVON_PIN=your-pin

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
SENDGRID_API_KEY=
EMAIL_FROM=noreply@disputeai.com
EMAIL_FROM_NAME=DisputeAI System

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#chargeback-alerts

# =============================================================================
# FRONTEND
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_AUTO_SUBMIT=false
FEATURE_PMS_SYNC=true
FEATURE_SLACK_NOTIFICATIONS=false
FEATURE_EMAIL_NOTIFICATIONS=true
